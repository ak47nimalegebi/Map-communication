<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGroupActivity"
    android:orientation="vertical">


    <com.bawei6.basemodule.titlebar.NormalTitBar
        android:id="@+id/new_group_normal_tit"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:normal_img_left="@drawable/fanhui"
        app:normal_tv_title="@string/app_newgroup"
        android:background="#339999"/>

    <TextView
        android:text="交友"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C9C1C1"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/new_group_edi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入群名称"
        android:paddingLeft="50dp"
        android:textSize="25sp"/>


    <EditText
        android:id="@+id/new_group_edi_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入群密码"
        android:paddingLeft="50dp"
        android:textSize="25sp"/>


    <EditText
        android:id="@+id/new_grouuo_edi_jian"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="25sp"
        android:hint="输入群简介"
        android:paddingLeft="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C9C1C1"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/new_group_tv_addFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="添加群成员"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C9C1C1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_group_recy_addfri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>