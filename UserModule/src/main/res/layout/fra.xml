<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bawei6.basemodule.titlebar.MyCustTitleBar
        android:id="@+id/user_cust"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cust_img_left="@drawable/home1"
        app:cust_tv_title="@string/app_cust_title"
        app:cust_img_right="@drawable/more1"
        />


    <com.amap.api.maps.MapView
        android:id="@+id/usermodule_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_cust">


    </com.amap.api.maps.MapView>


    <com.bawei6.basemodule.titlebar.BottomActionView
        android:id="@+id/user_bottombar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:bottom_img1="@drawable/tongxunlu"
        app:bottom_img2="@drawable/startas"
        app:bottom_img3="@drawable/duanxing"
        app:bottom_img4="@drawable/xiangji"
        app:bottom_img5="@drawable/pengy"
        android:layout_margin="20dp" />


    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/lianxi"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/img_group1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/grouppic"
            />

        <ImageView
            android:id="@+id/img_group2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/grouppic"
            />

        <ImageView
            android:id="@+id/img_group3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/grouppic"
            />

        <ImageView
            android:id="@+id/img_group4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/grouppic"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/lianxix"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lianxiren"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lianxiren2"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lianxiren3"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lianxiren4"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lianxiren5"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shenglvehao"/>

    </LinearLayout>




    <LinearLayout
        android:alpha="0.7"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/pop"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#ffac">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#fff"
                android:text="我的活动"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="5dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_huo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>