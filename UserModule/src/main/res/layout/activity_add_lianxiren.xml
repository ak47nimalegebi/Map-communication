<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottonbar.lianxiren.AddLianxirenActivity"
    android:orientation="vertical">


    <com.bawei6.basemodule.titlebar.NormalTitBar
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:normal_img_left="@drawable/fanhui"
        app:normal_tv_title="@string/app_normal"
        android:background="#339999"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
       >

        <EditText
            android:id="@+id/addlian_edi"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="70dp"
            android:hint="搜索手机联系人"
            android:drawableLeft="@drawable/search"
            android:background="@drawable/add"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/addlian_btn"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:text="搜索"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_addlian_recy"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"/>

        <ListView
            android:id="@+id/user_addlian_list"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="#fff"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>